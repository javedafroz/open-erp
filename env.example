# Environment Configuration Example
# Copy this file to .env and update the values as needed

# Application Environment
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=erp_db
DB_USER=erp_user
DB_PASSWORD=erp_password
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=erp-system
KEYCLOAK_CLIENT_ID=erp-backend
KEYCLOAK_CLIENT_SECRET=your-client-secret-here
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your-super-secret-refresh-key-here
REFRESH_TOKEN_EXPIRES_IN=7d

# RabbitMQ Configuration
RABBITMQ_URL=amqp://erp_user:erp_password@localhost:5672
RABBITMQ_EXCHANGE=erp.events
RABBITMQ_NOTIFICATION_QUEUE=notifications

# Object Storage (MinIO/S3) Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=erp_admin
MINIO_SECRET_KEY=erp_password123
MINIO_BUCKET=erp-files
MINIO_USE_SSL=false

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=erp

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring Configuration
PROMETHEUS_ENABLED=true
METRICS_PORT=9100

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Development Configuration
DEBUG=erp:*
SWAGGER_ENABLED=true
